<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/promotionTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/promotion_title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/promotionDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/promotion_description"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/promotionDiscountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/discount"
        android:textSize="16sp"
        android:textColor="@color/design_default_color_error" />

    <Button
        android:id="@+id/viewPromotionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/view_promotion" />

</LinearLayout>