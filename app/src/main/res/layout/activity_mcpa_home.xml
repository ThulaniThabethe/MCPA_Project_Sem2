<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/green_primary"
        android:padding="24dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What would you like to do today?"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:alpha="0.9" />

    </LinearLayout>

    <!-- Main Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Quick Actions Grid -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/green_primary"
                android:layout_marginBottom="16dp" />

            <!-- Browse Products Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/green_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:background="@color/green_light"
                        android:contentDescription="Browse Products" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/browse_products"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/green_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Explore our wide range of products"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/browseProductsButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Browse"
                        android:textSize="14sp"
                        app:backgroundTint="@color/green_primary"
                        app:cornerRadius="20dp"
                        android:textColor="@color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- View Cart Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/green_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:background="@color/green_light"
                        android:contentDescription="View Cart" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_cart"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/green_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Review items in your cart"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewCartButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Cart"
                        android:textSize="14sp"
                        app:backgroundTint="@color/green_primary"
                        app:cornerRadius="20dp"
                        android:textColor="@color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- View Profile Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/green_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:background="@color/green_light"
                        android:contentDescription="View Profile" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_profile"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/green_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manage your account settings"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/viewProfileButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="14sp"
                        app:backgroundTint="@color/green_primary"
                        app:cornerRadius="20dp"
                        android:textColor="@color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Promotions & Deals Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/green_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:background="@color/green_light"
                        android:contentDescription="Promotions &amp; Deals" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Promotions &amp; Deals"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/green_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discover our latest offers and discounts"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/promotionsButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Offers"
                        android:textSize="14sp"
                        app:backgroundTint="@color/green_primary"
                        app:cornerRadius="20dp"
                        android:textColor="@color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Store Locator Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/green_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_launcher_foreground"
                        android:background="@color/green_light"
                        android:contentDescription="Store Locator" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Store Locator"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/green_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Find our nearest stores"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/storeLocatorButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Locate"
                        android:textSize="14sp"
                        app:backgroundTint="@color/green_primary"
                        app:cornerRadius="20dp"
                        android:textColor="@color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/logout"
                android:textSize="16sp"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/green_primary"
                app:cornerRadius="8dp"
                android:textColor="@color/green_primary" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>